<h1>Listing discs</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @discs.each do |disc| %>
  <tr>
    <td><%= disc.name %></td>
    <td><%= disc.release_date %></td>
    <td><%= link_to 'Show', disc %></td>
    <td><%= link_to 'Edit', edit_disc_path(disc) %></td>
    <td><%= link_to 'Destroy', disc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Disc', new_disc_path , :class => "btn btn-large btn-primary disabled" %>

