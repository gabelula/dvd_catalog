<%= nested_form_for @actor, :html => { :class => "form-horizontal" }  do |f| %>
  <% if @actor.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <h2><%= pluralize(@actor.errors.count, "error") %> prohibited this actor from being saved:</h2>

      <ul>
      <% @actor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_select :birth_date, :start_year => 1900 %>
  </div>
  <div class="field">
    <%= f.label :gender%><br />
    <%= f.select :gender, Person::VALID_GENDERS.map {|k,v| [v,k]}, :include_blank => 'Select' %>
  </div>

  <div class="field">
    <%= f.label :disc_id %>
    <%= f.fields_for :acts do |disc_form| %>
      <%= disc_form.select :disc_id, Disc.all.map { |d| [d.name, d.id] }, :include_blank => 'Select a disc' %>
      <%= disc_form.link_to_remove "Remove this disc" , :class => "btn btn-mini btn-danger" %>
    <% end %>
    </br>
    <%= f.link_to_add "Add a disc", :acts , :class => "btn btn-mini" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
