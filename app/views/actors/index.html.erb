<h1>Listing actors</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Birth Date</th>
    <th>Gender</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @actors.each do |actor| %>
  <tr>
    <td><%= actor.name %></td>
    <td><%= actor.birth_date %></td>
    <td><%= actor.gender_humanize %></td>
    <td><%= link_to 'Show', actor %></td>
    <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
    <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New actor', new_actor_path , :class => "btn btn-large btn-primary disabled" %>
