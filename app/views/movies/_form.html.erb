<%= nested_form_for @disc, :html => { :class => "form-horizontal" } do |f| %>
  <% if @disc.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <h2><%= pluralize(@disc.errors.count, "error") %> prohibited this disc from being saved:</h2>
      <ul>
      <% @disc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br />
    <%= f.date_select :release_date, :start_year => 1900 %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.label :asin %><br />
    <%= f.text_field :asin %>
  </div>

  <div class="field">
    <%= f.label :director_id %>
    <%= f.select :director_id, Director.all.map { |d| [d.name, d.id] }, :include_blank => 'Select a director' %>
  </div>

  <div class="field">
    <%= f.label :actor_id %>
    <%= f.fields_for :acts do |actor_form| %>
      <%= actor_form.select :actor_id, Actor.all.map { |a| [a.name, a.id] }, :include_blank => "Select an actor" %>
      <%= actor_form.link_to_remove "Remove this actor" , :class => "btn btn-mini btn-danger" %>
    <% end %>
    </br>
    <%= f.link_to_add "Add an actor", :acts , :class => "btn btn-mini" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
