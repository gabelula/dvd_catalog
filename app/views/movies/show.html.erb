<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @movie.name %>
</p>

<p>
  <b>Release date:</b>
  <%= @movie.release_date %>
</p>

<p>
  <b>Summary:</b>
  <%= @movie.summary %>
</p>

<p>
  <b>Asin:</b>
  <%= link_to @movie.asin, @movie.amazon_link %>
</p>


<% unless @movie.director.nil? %>
<p>
  <b>Director:</b>
  <%= link_to @movie.director.name, @movie.director %>
</p>
<% end %>

<% if @movie.actors.any? %>
<p>
  <b>Actors:</b>
  <ul>
    <% @movie.actors.each do |actor| %>
      <li><%= link_to actor.name, actor %></li>
    <% end %>
  </ul>
</p>

<% end %>

<%= link_to 'Edit', edit_movie_path(@movie), :class => "btn btn-large"  %>
<%= link_to 'Back', movies_path, :class => "btn btn-large"  %>
