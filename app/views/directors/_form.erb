<%= nested_form_for @director, :html => { :class => "form-horizontal" }  do |f| %>
  <% if @director.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <h2><%= pluralize(@director.errors.count, "error") %> prohibited this director from being saved:</h2>

      <ul>
      <% @director.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_select :birth_date, :start_year => 1900 %>
  </div>
  <div class="field">
    <%= f.label :gender%><br />
    <%= f.select :gender, Person::VALID_GENDERS.map {|k,v| [v,k]}, :include_blank => 'Select' %>
  </div>

  <div class="field">
    <%= f.label :discs %>
    <%= f.fields_for :discs do |disc_form| %>
      <%= disc_form.select :id, Disc.all.map { |d| [d.name, d.id] }, :include_blank => "Select an disc"  %>
      <%= disc_form.link_to_remove "Remove this disc", :class => "btn btn-danger btn-mini" %>
    <% end %>
    </br>
    <p><%= f.link_to_add "Add a disc", :discs, :class => "btn btn-mini" %></p>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
